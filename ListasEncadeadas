#include <stdio.h>
#include <stdlib.h>
#include "ListasEncadeadas.h"

typedef struct no{
    int info;
    struct no *prox;
}NoLista;

NoLista *criarLista(){
    return NULL;
}

int estaVazia(NoLista **l){
    return(*l == NULL);
    
}

int insereListaInicio(NoLista **l,int v){
    NoLista *n = (NoLista*)malloc(sizeof(NoLista));
    if(n!= NULL){            
        n->info = v;
        n->prox = *l;
        *l=n;
    }else{
        printf("NÃO ALOCOU ESPAÇO");
    }
}

void imprimeLista(NoLista **l){
    if(!estaVazia(l)){
        NoLista *n = *l;
        int t = 0;
        while(n != NULL){
            printf("POSIÇÃO [%d] || VALOR[%d]",t,n->info);
            n = n->prox;
            t++;
        }
    }else{
        printf("LISTA VAZIA");
    }
}

int main(int argc, char** argv) {
    NoLista* lista;
    int i = 10;
    
    lista = criarLista();
    
    insereListaInicio(&lista,i);
    i = 5;
    insereListaInicio(&lista,i);
    imprimeLista((&lista));
    
    return (0);
}
